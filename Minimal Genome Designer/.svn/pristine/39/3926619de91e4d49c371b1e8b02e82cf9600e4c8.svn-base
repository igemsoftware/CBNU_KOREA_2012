                                    foreach (XmlNode synb_n in NameList)
                                    {
                                        if (synb_n.InnerText != null)
                                        {
                                            String name = synb_n.InnerText;
                                            Console.WriteLine(name);
                                            deleteListAll();
                                            DesignerData.selectEGList(indexOfCircle);
                                            reloadList();
                                            for (int i = 0; i < DGVlist.Rows.Count; i++)
